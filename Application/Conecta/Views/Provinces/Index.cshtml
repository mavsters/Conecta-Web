@model IEnumerable<Conecta.Models.CountryStructure.Province>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProvinceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProvinceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProvinceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
