@model Conecta.Models.Location.LocationMain

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Edit</h2>

<h4>LocationMain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
