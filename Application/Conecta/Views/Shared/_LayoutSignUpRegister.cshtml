<!DOCTYPE html>
<html>
<head>
    <!-- Title -->
    <title>@ViewData["Title"] - Conecta</title>
    @await Html.PartialAsync("_MetaTagsPartial")
    @await Html.PartialAsync("_HeadPartial")
</head>
<body class="@ViewData["Title"].ToString().ToLower()-page sidebar-collapse">
    @await Html.PartialAsync("_SideNavPartial")
    @if (ViewData["Title"].ToString().Equals("Login"))
    {
        <div class="page-header header-filter" style="height: -webkit-fill-available;background-image: url('@Url.Content("~/")images/@ViewData["Background"]'); background-size: cover; background-position: top center;">
            <div class="container">
                @RenderBody()
            </div>
            @await Html.PartialAsync("_FooterDashboardPartial")
        </div>
    }
    else
    {
        <div class="page-header header-filter" filter-color="black" style="background-image: url('@Url.Content("~/")images/@ViewData["Background"]'); background-size: cover; background-position: top center;">
            <div class="container">
                @RenderBody()
            </div>
            @await Html.PartialAsync("_FooterDashboardPartial")
        </div>
    }
    @await Html.PartialAsync("_ScriptsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>
