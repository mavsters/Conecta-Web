@model Conecta.Models.CountryStructure.Country

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="row">
    <div class="card ">
        <div class="card-header card-header-rose card-header-icon">
            <div class="card-icon">
                <i class="material-icons">contacts</i>
            </div>
            <h4 class="card-title">Crear País</h4>
        </div>
        <form asp-action="Create">
            <div class="card-body ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CountryId" />
                <div class="row">
                    <label asp-for="Name" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <div class="form-group has-default bmd-form-group">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="IATA" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <div class="form-group has-default bmd-form-group">
                            <input asp-for="IATA" class="form-control" />
                            <span asp-validation-for="IATA" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="CountryFlagUrl" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <div class="form-group has-default bmd-form-group">
                            <input asp-for="CountryFlagUrl" class="form-control" />
                            <span asp-validation-for="CountryFlagUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
                <div class="row ml-auto mr-auto">
                    <button type="submit" class="btn btn-fill btn-success">Crear</button>
                    <a asp-action="Index" class="btn btn-fill btn-rose">Volver a la lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
